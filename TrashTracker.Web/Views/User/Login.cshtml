@model Login
@{
    ViewData["title"] = "Bejelentkezés";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>@ViewData["title"]</h1>
            <hr />
            @using (Html.BeginForm("Login", "User",
            new { backUrl = ViewData["returnUrl"] }, FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group m-3">
                    <div class="form-floating">
                        @Html.EditorFor(m => m.UserName,
                                 new
                                 {
                                     htmlAttributes = new
                                     {
                                         @class = "form-control",
                                         placeholder = ""
                                     }
                                 })
                        @Html.LabelFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName, "",
                                 new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group m-3">
                    <div class="form-floating">
                        @Html.EditorFor(m => m.Password,
                                 new
                                 {
                                     htmlAttributes = new
                                     {
                                         @class = "form-control",
                                         placeholder = ""
                                     }
                                 })
                        @Html.LabelFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password, "",
                                 new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row justify-content-between">
                    <div class="col">
                        @Html.IconActionLink("Regisztráció", "fa-solid fa-user-plus",
                                 "Register", "User", new(), new { @class = "btn btn-secondary" })
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-primary" type="submit">
                            <i class="fa-solid fa-right-to-bracket"></i> Bejelentkezés
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
